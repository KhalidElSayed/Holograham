    <style name="Holograham.TextAppearance.SearchResult">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
    </style>

    <style name="Holograham.TextAppearance.SearchResult.Title">
         <item name="android:textSize">18sp</item>
    </style>

    <style name="Holograham.TextAppearance.SearchResult.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

	<style name="Holograham.TextAppearance.Widget" />

    <style name="Holograham.TextAppearance.Widget.Button" parent="Holograham.TextAppearance.Small.Inverse">
        <item name="android:textColor">@color/primary_text_nodisable_holo_light</item>
    </style>

    <style name="Holograham.TextAppearance.Widget.IconMenu.Item" parent="Holograham.TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- This style is for smaller screens; values-xlarge defines a version
         for larger screens. -->
    <style name="Holograham.TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/tab_indicator_text</item>
    </style>
    
    <style name="Holograham.TextAppearance.Widget.TextView">
        <item name="android:textColor">?android:attr/textColorPrimaryDisableOnly</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
    </style>

    <style name="Holograham.TextAppearance.Widget.TextView.PopupMenu">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:attr/textColorPrimaryDisableOnly</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
    </style>

    <style name="Holograham.TextAppearance.Widget.DropDownHint">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Holograham.TextAppearance.Widget.DropDownItem">
        <item name="android:textColor">?android:attr/textColorPrimaryDisableOnly</item>
    </style>

    <style name="Holograham.TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">?android:attr/textColorPrimaryDisableOnly</item>
    </style>

    <style name="Holograham.TextAppearance.Widget.EditText">
        <item name="android:textColor">@color/bright_foreground_light</item>
        <item name="android:textColorHint">@color/hint_foreground_holo_light</item>
    </style>

    <style name="Holograham.TextAppearance.Widget.PopupMenu">
    	<item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">@color/hint_foreground_light</item>
        <item name="android:textColorHighlight">@color/highlighted_text_light</item>
        <item name="android:textColorLink">@color/link_text_light</item>
    </style>

    <style name="Holograham.TextAppearance.Widget.PopupMenu.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Holograham.TextAppearance.Widget.PopupMenu.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Holograham.TextAppearance.Widget.Switch" parent="Holograham.TextAppearance.Small">
    </style>

    <style name="Holograham.TextAppearance.WindowTitle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Holograham.TextAppearance.DialogWindowTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/holo_blue_light</item>
    </style>

    <!-- Light text styles -->
    <style name="Holograham.TextAppearance.Light" parent="Holograham.TextAppearance">
    </style>

    <style name="Holograham.TextAppearance.Light.Inverse">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textColorHint">?android:attr/textColorHintInverse</item>
        <item name="android:textColorHighlight">?android:attr/textColorHighlightInverse</item>
